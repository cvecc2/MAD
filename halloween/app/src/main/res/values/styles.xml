<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="background">@color/background</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/darkColorPrimary</item>
        <item name="android:colorPrimaryDark">@color/darkPrimaryDark</item>
        <item name="android:colorAccent">@color/darkColorAccent</item>
        <item name="android:textColorPrimary">@color/darkColorPrimary</item>
        <item name="android:textColor">@color/darkColorAccent</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="android:colorButtonNormal">@color/darkPrimaryDark</item>
    </style>
</resources>
